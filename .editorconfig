# http://editorconfig.org

root = true

[*]
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf
charset = utf-8

[*.py]
indent_size = 4
max_line_length = 120
# iSort config  https://github.com/timothycrosley/isort
# Replace 'appname'
known_first_party = genesis
multi_line_output = 3
default_section = THIRDPARTY

# The JSON files contain newlines inconsistently
[*.json]
insert_final_newline = ignore

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab

# Minified JavaScript & CSS files shouldn't be changed
[**.min.{js,css}]
indent_style = ignore
insert_final_newline = ignore
